# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                       controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file           controllers.Assets.at(path="/public", file)

# User
GET         /user/list              controllers.UserController.list
GET         /user/edit              controllers.UserController.edit(id: Option[Long] ?= None)
POST        /user/create            controllers.UserController.create
POST        /user/update            controllers.UserController.update
POST        /user/remove/:id        controllers.UserController.remove(id: Long)

# JSON API
GET         /users                  controllers.JsonController.list
GET         /users/list-w-comment   controllers.JsonController.listWithComment
GET         /users/list-asis        controllers.JsonController.listEntireSource
POST        /users                  controllers.JsonController.createUser()
PUT         /users/:id              controllers.JsonController.updateUser(id: String)
DELETE      /users/:id              controllers.JsonController.removeUser(id: String)

GET         /users13                  controllers.JsonController13.listUsers
GET         /users132                 controllers.JsonController13.listUsers2
GET         /users133                 controllers.JsonController13.listUsers3
