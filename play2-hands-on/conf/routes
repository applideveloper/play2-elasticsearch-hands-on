# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                       controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file           controllers.Assets.at(path="/public", file)

# User
GET         /user/list              controllers.UserController.list
GET         /user/edit              controllers.UserController.edit(id: Option[Long] ?= None)
POST        /user/create            controllers.UserController.create
POST        /user/update            controllers.UserController.update
POST        /user/remove/:id        controllers.UserController.remove(id: Long)

# JSON API
GET         /json/list              controllers.JsonController.list
GET         /json/list-w-comment    controllers.JsonController.listWithComment
GET         /json/list-asis         controllers.JsonController.listEntireSource
POST        /json/create            controllers.JsonController.createUser()
PUT         /json/update/:id        controllers.JsonController.updateUser(id: String)
DELETE      /json/remove/:id        controllers.JsonController.removeUser(id: String)
